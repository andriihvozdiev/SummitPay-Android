<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">


    <View
        android:id="@+id/number_picker_left_divider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/order_item_number_picker"
        android:layout_alignTop="@+id/order_item_number_picker"
        android:layout_alignBottom="@+id/order_item_number_picker"
        android:layout_marginStart="108dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPinCodeBackground"
        android:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/order_item_number_picker"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/list_item_horizontal_number_picker" />

    <View
        android:id="@+id/number_picker_right_divider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/order_item_number_picker"
        android:layout_alignEnd="@+id/order_item_number_picker"
        android:layout_alignBottom="@+id/order_item_number_picker"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPinCodeBackground"
        android:visibility="visible" />


</RelativeLayout>