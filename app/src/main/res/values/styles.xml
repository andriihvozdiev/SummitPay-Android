<resources>

    <!--Default theme-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>


    <!--Theme for Splash Activity-->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>


    <!--BottomSheet-->
    <style name="ProductOptionsBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ProductOptionsBottomSheetDialogStyle</item>
    </style>

    <style name="ProductOptionsBottomSheetDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <!--  Dialog  -->
    <style name="FullHeightDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>


    <!--  Buttons  -->
    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="ButtonBold" parent="Button">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RedButton" parent="Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/button_white_states</item>
        <item name="android:background">@drawable/bg_rounded_5px_red_selectable</item>
    </style>

    <style name="SkyBlueButton" parent="Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/button_white_states</item>
        <item name="android:background">@drawable/bg_rounded_5px_sky_blue_selectable</item>
    </style>

    <style name="BlueButton" parent="Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/button_white_states</item>
        <item name="android:background">@drawable/bg_rounded_5px_blue_selectable</item>
    </style>

    <style name="GreenButton" parent="Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/button_white_states</item>
        <item name="android:background">@drawable/bg_rounded_5px_green_selectable</item>
    </style>

    <style name="YellowButton" parent="Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/button_white_states</item>
        <item name="android:background">@drawable/bg_rounded_5px_yellow_selectable</item>
    </style>

    <style name="WhiteButton" parent="Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/bg_rounded_5px_white_selectable</item>
    </style>

    <style name="TransparentBorderedButton" parent="Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/button_white_states</item>
        <item name="android:tint">@color/button_white_states</item>
        <item name="android:background">@drawable/bg_rounded_5px_border_white_selectable</item>
    </style>


    <!--  TextViews  -->
    <style name="TextView" parent="Widget.AppCompat.TextView">

    </style>

    <style name="TextViewTitle" parent="TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">26dp</item>
        <item name="android:paddingBottom">26dp</item>
    </style>

    <style name="TextViewTitleRegular" parent="TextView">

    </style>


    <!--Search View-->
    <style name="Search" parent="Widget.AppCompat.SearchView">
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/colorWhite</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/colorWhite</item>
    </style>


    <!--  EditTexts  -->
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="WhiteEditText" parent="EditText">
        <item name="android:background">@drawable/bg_rectangle_white</item>
        <item name="android:paddingStart">22dp</item>
        <item name="android:paddingEnd">22dp</item>
    </style>

    <style name="WhiteRoundedEditText" parent="EditText">
        <item name="android:background">@drawable/bg_rounded_5px_white_selectable</item>
        <item name="android:paddingStart">22dp</item>
        <item name="android:paddingEnd">22dp</item>
    </style>

    <style name="AuthTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="colorControlActivated">@color/colorHint</item>
        <item name="android:textColorHint">@color/colorHint</item>
    </style>


    <!--  Spinner  -->
    <style name="SpinnerAppTheme" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/bg_rounded_5px_border_white_selectable</item>
    </style>

</resources>
