<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_popup_rounded_16dp"
        android:backgroundTint="@color/colorToolbarBackground"
        android:id="@+id/root_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dialog_tender_options_btn_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="10dp"
                    android:src="@drawable/ic_cross" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/dialog_tender_options_btn_close"
                    app:layout_constraintEnd_toStartOf="@id/dialog_tender_options_txt_total_cost"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="8dp"
                    android:text="Amount to cash"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/dialog_tender_options_txt_total_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="4dp"
                    android:text="(£0.00)"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialog_txt_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="12dp"
                android:textColor="@color/colorWhite"
                android:textStyle="normal"
                android:textAlignment="textEnd"
                android:textSize="32sp"
                android:text="£ 0.00"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialog_txt_require_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="12dp"
                android:textColor="@color/colorWhiteOp50"
                android:textStyle="normal"
                android:textAlignment="textEnd"
                android:textSize="18sp"
                android:text="£ 0.00"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_option_5"
                    style="@style/SkyBlueButton"
                    android:layout_width="65dp"
                    android:layout_height="60dp"
                    android:padding="0dp"
                    android:textSize="18sp"
                    android:text="£5.00" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_number_1"
                    style="@style/TransparentBorderedButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:padding="0dp"
                    android:textSize="20sp"
                    android:text="1" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_number_2"
                    style="@style/TransparentBorderedButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:padding="0dp"
                    android:textSize="20sp"
                    android:text="2" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_number_3"
                    style="@style/TransparentBorderedButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:padding="0dp"
                    android:textSize="20sp"
                    android:text="3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_option_10"
                    style="@style/SkyBlueButton"
                    android:layout_width="65dp"
                    android:layout_height="60dp"
                    android:padding="0dp"
                    android:textSize="18sp"
                    android:text="£10.00" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_number_4"
                    style="@style/TransparentBorderedButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:padding="0dp"
                    android:textSize="20sp"
                    android:text="4" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_number_5"
                    style="@style/TransparentBorderedButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:padding="0dp"
                    android:textSize="20sp"
                    android:text="5" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_number_6"
                    style="@style/TransparentBorderedButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:padding="0dp"
                    android:textSize="20sp"
                    android:text="6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_option_20"
                    style="@style/SkyBlueButton"
                    android:layout_width="65dp"
                    android:layout_height="60dp"
                    android:padding="0dp"
                    android:textSize="18sp"
                    android:text="£20.00" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_number_7"
                    style="@style/TransparentBorderedButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:padding="0dp"
                    android:textSize="20sp"
                    android:text="7" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_number_8"
                    style="@style/TransparentBorderedButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:padding="0dp"
                    android:textSize="20sp"
                    android:text="8" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_number_9"
                    style="@style/TransparentBorderedButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:padding="0dp"
                    android:textSize="20sp"
                    android:text="9" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_delete"
                    style="@style/SkyBlueButton"
                    android:layout_width="65dp"
                    android:layout_height="60dp"
                    android:padding="0dp"
                    android:textSize="18sp"
                    android:text="DEL" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_number_0"
                    style="@style/TransparentBorderedButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:padding="0dp"
                    android:textSize="20sp"
                    android:text="0" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_number_00"
                    style="@style/TransparentBorderedButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:padding="0dp"
                    android:textSize="20sp"
                    android:text="00"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_cash"
                    style="@style/GreenButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:padding="0dp"
                    android:textSize="18sp"
                    android:text="Cash" />

            </LinearLayout>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</ScrollView>